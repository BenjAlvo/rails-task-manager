<h1> Tasks </h1>

<h2> This are all your tasks</h2>

<ul>
  <% @tasks.each do |task| %>
    <li> <%= link_to task.title, task_path(task) %>  <input type = "checkbox" <%= task.completed ? "checked" : "" %>> <%= link_to "Delete task", task_path(task), method: :delete, data: { confirm: "Are you sure?" }  %></li>
      <% end %>
</ul>

